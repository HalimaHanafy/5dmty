<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewAboutDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="من نحن"
        android:textSize="25dp"
        android:paddingRight="30dp"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/fab" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/textViewAboutDialogDialog"
        android:layout_width="303dp"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="5dp"

        android:src="@drawable/logo_about"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryDark" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="24dp"
        android:layout_row="2"
        android:autoLink="web"
        android:gravity="center"
        android:text="http://www.cr-prog.com/"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="?attr/colorAccent"
        android:textColorLink="@color/wallet_link_text_light" />

</LinearLayout>